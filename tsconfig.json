{
  "include": [
    "src/**/*.ts",
    "./**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext", // 指定ECMAScript目标版本
    "module": "esnext", // 指定生成哪个模块系统代码
    "jsx": "preserve",
    "moduleResolution": "node", // 决定如何处理模块。
    "strict": true,
    "esModuleInterop": true, // 解析非相对模块名的基准目录
    "sourceMap": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "api/*": [
        "src/api/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "common/*": [
        "src/common/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "types/*": [
        "src/types/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],

    //后续去除
//    "noImplicitAny": false,                       /*在隐含'any'类型的表达式和声明上引发错误。*/
    "noImplicitThis": false,                      /*如果'this'表达式隐含了'any'类型，则引发错误。*/

    "skipLibCheck": true, // 忽略所有的声明文件（ *.d.ts）的类型检查。
    "importHelpers": true, // 从 tslib 导入辅助工具函数（比如 __extends， __rest等）
    "experimentalDecorators": true,
    "types": ["webpack-env", "node","common"], // 要包含的类型声明文件名列表
  },

}
